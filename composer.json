{
    "name": "chinstrap-cms/core",
    "type": "library",
    "description": "Core for the Chinstrap CMS",
    "keywords": [
        "chinstrap-cms",
        "core"
    ],
    "homepage": "https://github.com/chinstrap-cms/core",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Daly",
            "email": "450801+matthewbdaly@users.noreply.github.com",
            "homepage": "https://matthewdaly.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "infection/infection": "^0.15.0",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit" : ">=8.0",
        "php-coveralls/php-coveralls": "^2.2",
        "squizlabs/php_codesniffer": "^3.0",
        "vimeo/psalm": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Chinstrap\\Core\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chinstrap\\Core\\Tests\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "psalm": "psalm"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
